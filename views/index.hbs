<div class="row"> 
  <div class="col-lg-12 col-md-12 col-sm-12">

    <div class="pull-left fixed-panel">
      <img class="panel-img" src="http://grass-roots-science.info/VascularContent/Images/carecaregiver.png"/>
    </div>

    <div class="pull-right fixed-panel padding-top">
      <form role="form" class="form-inline" action="/donations/submit" method="POST" id="payment-form">

        <span class="payment-errors"></span>

        <div class="row">
          <div class="col-lg-3 col-md-3 col-sm-3 donation-field">
            <input class="donation-input" name="amount" placeholder= "0.00" size="6">
          </div>

          <div class="monthly-checkbox col-lg-8 col-lg-offset-1 col-md-8 col-md-offset-1 col-sm-8 col-sm-offset-1">
            <input type="checkbox" name="monthly" size="20"/>
            <label> Make this donation monthly! </label>
          </div>
        </div>
      
        <div class="row form-row">
          <input type="text" class="no-border col-lg-12 col-md-12 col-sm-12" name="name" class="" placeholder="Full Name"/>
