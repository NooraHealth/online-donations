
<div class="modal fade" id="change-email-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Change Your Account's Email</h4>
      </div>
      <div class="modal-body">
        <div id="change-email-message"></div>
        {{>changeEmailForm}}
        {{>successMessage}}
      </div>
      <div class="modal-footer">
        <button type="button" class="text-contain btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" id="submit-change-email" class="text-contain btn btn-primary" value="LOGIN">Save</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
