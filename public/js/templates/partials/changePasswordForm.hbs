<div class="row">
  <div class="donation-card col-lg-6 col-sm-6 col-md-6 col-lg-offset-3 col-md-offset-3 col-sm-offset-3">
    <form  role='form' id="change-password-form" action="donors/changepassword" method="POST">  

      <input type="hidden" name="email" value="{{email}}">

      <div class="row form-row">
        <label>Current Password</label>
        <input type="password" class="no-border form-control" id="currentpassword" name='currentpassword' placeholder="*****">
      </div>
      
      <div class="row form-row">
        <label>New Password</label>
        <input type="password" class="no-border form-control" id="password" name='password' placeholder="*****">
      </div>
      
      <div class="row form-row">
        <label>Confirm New Password</label>
        <input type="password" class="no-border form-control" id="confirm" name='confirm' placeholder="*****">
      </div>

      <div class="row">
        <input type="submit" class="form-control btn btn-default padding-top-sm" value="SUBMIT"></input>
      </div>
    </form>
  </div>
</div>
