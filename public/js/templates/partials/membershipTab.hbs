<div class="row">
  
  <div class="row">
    <div class="fixed-panel pull-left">

    {{#donatesMonthly this}}
      <div class="row padding-bottom">
          <h2>You give <span class="label label-primary">{{toDollars this.amount}}</span> each month.</h2>
          <button class="btn btn-default form-control" id="edit-membership">Edit My Membership</button>
          <a id="cancel-membership" class="silver">Cancel my monthly membership </a>
      </div>
    {{/donatesMonthly}}
      <div class="row">
        <h4 class="silver"> <em>Donation History</em> </h4>
        <table class="silver table">
          <tr>
            <th class="silver">Donation</th>
            <th class="silver">Date</th>
          </tr>
          {{#each donations}}
          <tr>
            <td class="silver">{{toDollars this.amount}}</td>
            <td class="silver">{{timestampToString this.created}}</td>
          </tr>
          {{/each}}
        </table>
      </div>
    </div>

      <div class="pull-right fixed-panel">
        <img class="panel-img" src="./images/silkbaby.png"/>
      </div>
    </div>

    <button id="give-again" class="btn btn-default" {{#donatesMonthly this}} style="visibility:hidden"  {{/donatesMonthly}}>Give Again!</div> 
    
</div>
