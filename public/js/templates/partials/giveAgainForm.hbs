<form role="form" class="form-inline"  id="give-again-form">
  <div class="row">
      <p><b>Current Payment Information </b></p>
  </div>
  <div class="row padding-bottom">
      <p class="silver">{{getCardInfo this.donor}}</p>
  </div>

  {{>donationBar}}

  <div class="row">
    <div class="col-lg-3 col-md-3 col-sm-3 donation-field">
      <input type="text" class="donation-input" name="amount" placeholder= "0.00" size="6">
    </div>

    <div class="monthly-checkbox col-lg-8 col-lg-offset-1 col-md-8 col-md-offset-1 col-sm-8 col-sm-offset-1">
      <input type="checkbox" name="monthly" size="20"/> Make this donation monthly!
    </div>
  </div>
</form>
