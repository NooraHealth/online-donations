    <label>New Email</label>
    <input type="email" class="no-border form-control" id="newemail" name='newemail' placeholder="{{email}}">
  </div>
  
  <div class="row form-row">
    <label>Password</label>
    <input type="password" class="no-border form-control" id="password" name='password' placeholder="*****">
  </div>

</form>
